<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_margin="15dp"
    android:layout_weight="1"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1">
    <!--android:padding="15dp"-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:text="Add Skill"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:id="@+id/inp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:width="300dp"
        android:hint="Enter skill..."
        android:inputType="textPersonName" />
    <!--android:ems="10"-->

    <EditText
        android:id="@+id/defaultHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:width="300dp"
        android:hint="Enter starting time (in hours)..."
        android:inputType="number" />

    <TextView
        android:id="@+id/input_dialog_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/shaishav_quote"
        android:textAlignment="center" />
    <!--android:layout_weight=".3"-->

    <TextView
        android:id="@+id/input_dialog_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/force_quote"
        android:textAlignment="center" />
    <!--android:layout_weight=".3"-->

    <CheckBox
        android:id="@+id/cbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="I accept" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_inp_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_inp_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>